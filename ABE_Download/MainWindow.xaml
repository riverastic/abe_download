<Window x:Class="ABE_Download.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ABE_Download"
        xmlns:viewModel="clr-namespace:ABE_Download.ViewModel"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.DataContext>
        <viewModel:DownloadViewModel/>
    </Window.DataContext>
    <Grid>
        <StackPanel Orientation="Horizontal">
            <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Text="{Binding Model.IsConnected}"/>
            <Button Width="200" Height="40" Content="{Binding Model.IsConnected}" Command="{Binding DownloadCommand}"/>
            <ListView ItemsSource="{Binding Model.RemoteFileInfos}"/>
        </StackPanel>
    </Grid>
    
</Window>
